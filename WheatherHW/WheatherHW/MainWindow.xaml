                    <TextBlock Name="day7" Grid.Row="1" Grid.Column="1" FontSize="13" TextWrapping="Wrap" Foreground="#DD0E0C0C"/>
                    <Image Grid.Column="1" Name="imageDay7" Height="40" Width="40" HorizontalAlignment="Left"/>
                </Grid>
            </GroupBox>
        </materialDesign:Card>
    </Grid>
</Window>
