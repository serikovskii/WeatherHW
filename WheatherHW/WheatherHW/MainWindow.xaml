            </GroupBox>
        </materialDesign:Card>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth1" Grid.Column="3" Grid.Row="1" Height="200" Padding="10" Margin="10">
            <GroupBox Name="groupDay4" Height="180" Margin="0,0,0.4,0" BorderThickness="0">
